@model QuanLyKSOmni.PHONG
@{
    ViewBag.Title = "DatPhong";
    Layout = "~/Views/Shared/_LayoutMainEmty.cshtml";
}
<h4 style="color : red; text-align:center">@ViewBag.ThongBao</h4>
<table align="center">
    <h2 style="text-align:center">Đặt phòng</h2>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <tr style="height:40px">
            <td>Tên khách hàng :</td>
            <td>@Html.TextBox("TenKH")</td>
            @ViewData["Loi1"]
        </tr>
        <tr style="height:40px">
            <td>Số điện thoại :</td>
            <td>@Html.TextBox("SDT")</td>
            @ViewData["Loi2"]
        </tr>
        <tr style="height:40px">
            <td>CMND :</td>
            <td>@Html.TextBox("CMND")</td>
            @ViewData["Loi3"]
        </tr>
        <tr style="height:40px">
            <td>PassPort :</td>
            <td>@Html.TextBox("PassPort")</td>
            @ViewData["Loi4"]
        </tr>
        <tr style="height:40px">
            
            <td>Ngày đặt :</td>
            <td>
                <input type="date" name="NgayDat" />
            </td>
            
        </tr>
        <tr style="height:40px">
            <td>@Html.LabelFor(model => model.MaPhong, htmlAttributes: new { @class = "control-label" })</td>
            <td>@Html.DropDownList("MaPhong")</td>
        </tr>
        <tr style="height:40px">

            <td>Ngày đến :</td>
            <td>
                <input type="date" name="NgayDen" />
            </td>

        </tr>
        <tr style="height:40px">

            <td>Ngày đi :</td>
            <td>
                <input type="date" name="NgayDi" />
            </td>

        </tr>
        <tr style="height:40px">
            <td>
                Tiền cọc :
            </td>
            <td style="color:red">500.0000 VNĐ</td>
        </tr>
        <tr style="height:40px">
            <td>
                
            </td>
            <td><input type="submit" value="Đặt phòng" /></td>
        </tr>

    }
</table>

